
@model IEnumerable<Data.Domain.Post>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@foreach (var item in Model)
{
    <div class="col-lg-3 col-sm-6 grid-margin mb-5 mb-sm-2">
        <div class="position-relative image-hover">
            <img src="~/postImages/@(item.Image)"
                 class="img-fluid"
                 alt="world-news" />
            <span class="thumb-title">@item.AuthorName</span>
        </div>
        <h5 class="font-weight-bold mt-3">
            @item.Title
        </h5>
        <p class="fs-15 font-weight-normal">
            @Html.Raw((item.Content.Length > 250 ? item.Content.Substring(0, 250) : item.Content)) ...
        </p>
        <a asp-action="BlogItem" asp-route-id="@item.Id" class="font-weight-bold text-dark pt-2">Read Article</a>
    </div>

  
}
