@model Data.Domain.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Image"] = Model.Image;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="news-post-wrapper">
                <div class="news-post-wrapper-sm ">
                    <h1 class="text-center">
                        @Model.Title
                    </h1>
                    <div class="text-center">

                        <a href="#" class="btn btn-dark font-weight-bold mb-4">@Model.AuthorName</a>
                    </div>
                    <p class="fs-15 d-flex justify-content-center align-items-center m-0">
                        @Model.UpdateTime.ToString("dd.MM.yyyy hh:mm tt")
                    </p>
                    <p class="pt-4 pb-4">
                        @Html.Raw(Model.Content)
                    </p>

                </div>
                <img src="~/postImages/@(Model.Image)" alt="news" class="img-fluid mb-4" />
            </div>
        </div>
    </div>
</div>

